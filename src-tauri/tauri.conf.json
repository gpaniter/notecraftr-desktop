{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "NoteCraftr",
  "version": "0.2.3",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist/notecraftr-desktop/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "ng serve",
    "beforeBuildCommand": "ng build"
  },
  "app": {
    "windows": [
      {
        "title": "NoteCraftr",
        "label": "notecraftr",
        "width": 500,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minHeight": 500,
        "minWidth": 420,
        "decorations": false,
        "theme": "Light" 
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "csp": null
    }
  },
  "bundle": {
    "publisher": "gen.paniterce",
    "copyright": "gen.paniterce 2024",
    "category": "Productivity",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["icons/32x32.png", "icons/Square44x44Logo.png", "icons/gen.paniterce.png"]

  }
}
